@{
}

@model ServiceOrderManagerV3.Models.Entities.Client

<h1>Edit Client</h1>

@* Aviso caso tenha alguma inconsistência no relatório, pode ser melhorado com componente bootstrap *@

@if (Model is null)
{
    <p>Client not found</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form-label">CNPJ</label>
            <input type="text" class="form-control" asp-for="Cnpj" />
        </div>

        <div class="mt-3">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address" />
        </div>

        @* Add button  *@

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}
